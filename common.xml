<?xml version="1.0" encoding="UTF-8"?>
<project name="qx-softmotions"
        >

    <dirname property="common.current" file="${ant.file.qx-softmotions}"/>
    <property environment="env"/>
    <property file="${common.current}/build-globals.properties"/>


    <typedef resource="net/sf/antcontrib/antlib.xml">
        <classpath>
            <pathelement location="${ant.lib}/ant-contrib-1.0b3.jar"/>
        </classpath>
    </typedef>

    <typedef resource="foundrylogic/vpp/antlib.xml"
             uri="http://vpp.sourceforge.net">
        <classpath>
            <pathelement location="${ant.lib}/foundrylogic-vpp-2.2.1.jar"/>
        </classpath>
    </typedef>

    <target name="common.build.init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${target.dir}"/>
    </target>

    <target name="common.clean">
        <delete dir="${build.dir}" failonerror="false"/>
        <delete dir="${target.dir}" failonerror="false"/>
    </target>

</project>